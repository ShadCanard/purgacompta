
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  discordId   String   @unique
  username    String
  email       String?
  avatar      String?
  role        String   @default("GUEST") // GUEST, MEMBER, MANAGER, ADMIN, OWNER
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  data        String?  // JSON sérialisé pour stocker des infos dynamiques

  logs      Log[]
  vehicleUsers VehicleUser[]

  @@map("users")
}


model Log {
  id        String   @id @default(cuid())
  entity    String   // ex: User, Transaction, etc.
  entityId  String   // id de l'entité modifiée
  userId    String   // id de l'utilisateur ayant fait l'action
  diff      String?  // JSON des changements
  createdAt DateTime @default(now())
  action    String   // ex: CREATE, UPDATE, DELETE

  user      User     @relation(fields: [userId], references: [id])
  @@map("logs")

}

model Group {
  id        String   @id @default(cuid())
  name      String   @unique
  tag       String? // Tag court ou abréviation
  description String?
  color1    String?
  color2    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  contacts Contact[]
  itemPrices ItemPrice[]
  
  @@map("groups")
}


model Contact {
  id        String   @id @default(cuid())
  name      String
  phone     String   // Doit commencer par 555-
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  groupid String?

  group     Group? @relation(fields: [groupid], references: [id])

  @@map("contacts")
}


model Item {
  id        String   @id @default(cuid())
  name      String   @unique
  weight    Float    // Poids en kilo, décimal possible
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sellable  Boolean  @default(true)
  weapon    Boolean  @default(false)

  itemPrices ItemPrice[]
  transactionLines TransactionLine[]
  storageItems StorageItem[]
  vehicleTransactions VehicleTransaction[]

  @@map("items")
}

model ItemPrice {
  id        String   @id @default(cuid())
  itemId    String
  groupId   String
  targetId  String?
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  onSell    Boolean  @default(true)
  buying    Boolean  @default(true)

  item      Item   @relation(fields: [itemId], references: [id])
  group     Group  @relation(fields: [groupId], references: [id])

  @@unique([itemId, groupId, targetId])
  @@map("item_prices")
}

model Transaction {
  id            String   @id @default(cuid())
  sourceId      String? // Groupe source
  targetId      String? // Groupe ou contact cible
  blanchimentPercent Int   // Pourcentage de blanchiment appliqué
  amountToBring   Float   // Montant à apporter (hors blanchiment)
  blanchimentAmount Float // Montant de blanchiment
  totalFinal     Float   // Total final de la transaction
  createdAt      DateTime @default(now())

  lines          TransactionLine[]

  @@map("transactions")
}

model TransactionLine {
  id            String   @id @default(cuid())
  transactionId String
  itemId        String
  quantity      Int
  unitPrice     Float // Prix unitaire (corrigé ou non)

  transaction   Transaction @relation(fields: [transactionId], references: [id])
  item          Item        @relation(fields: [itemId], references: [id])

  @@map("transaction_lines")
}

model Vehicle {
  id    String @id @default(cuid())
  name  String
  front String
  back  String
  vehicleUsers VehicleUser[]
  vehicleTransactions VehicleTransaction[]
  @@map("vehicles")
}

model VehicleUser {
  id        String   @id @default(cuid())
  vehicleId String?
  userId    String
  found     Boolean  @default(false)

  vehicle   Vehicle?  @relation(fields: [vehicleId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  // Suppression de la contrainte d'unicité vehicleId+userId car vehicleId peut être null
  @@index([userId])
  @@map("vehicle_users")
}


model Storage {
  id          String   @id @default(cuid())
  name        String   @unique
  type        String   // "armurerie" ou "stockage"
  location    String   // Emplacement du stockage (QG, B-Jax, ...)
  maxWeight   Float?   // en kg, null = illimité
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items       StorageItem[]

  @@map("storages")

}

model StorageItem {
  id         String   @id @default(cuid())
  storageId  String
  itemId     String
  quantity   Int      @default(1)

  storage    Storage  @relation(fields: [storageId], references: [id])
  item       Item     @relation(fields: [itemId], references: [id])

  @@unique([storageId, itemId])
  @@map("storage_items")
}


model VehicleTransaction {
  id            String   @id @default(cuid())
  vehicleId     String
  targetId      String // Peut référencer un contact ou un groupe
  rewardAmount  Float
  isMoney       Boolean // true = argent, false = objet
  isDirtyMoney  Boolean // true = sale, false = propre (si isMoney)
  itemId        String? // null si argent
  createdAt     DateTime @default(now())

  vehicle       Vehicle  @relation(fields: [vehicleId], references: [id])
  item          Item?    @relation(fields: [itemId], references: [id])

  @@map("vehicle_transactions")
}