// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Enum simulé pour SQLite (les enums ne sont pas supportés nativement)
// Les rôles possibles: GUEST, MEMBER, MANAGER, ADMIN, OWNER

model User {
  id        String   @id @default(cuid())
  discordId String   @unique
  username  String
  name      String   // Nom à afficher dans le frontend (différent du nom Discord)
  email     String?
  avatar    String?
  role      String   @default("GUEST") // GUEST, MEMBER, MANAGER, ADMIN, OWNER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  logs      Log[]

  @@map("users")
}


model Log {
  id        String   @id @default(cuid())
  action    String   // ex: CREATE, UPDATE, DELETE
  entity    String   // ex: User, Transaction, etc.
  entityId  String   // id de l'entité modifiée
  userId    String   // id de l'utilisateur ayant fait l'action
  diff      String?  // JSON des changements
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@map("logs")
}


model Group {
  id        String   @id @default(cuid())
  name      String   @unique
  tag       String? // Tag court ou abréviation
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isActive  Boolean  @default(true)

  @@map("groups")
}
