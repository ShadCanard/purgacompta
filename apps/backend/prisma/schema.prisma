// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Enum simulé pour SQLite (les enums ne sont pas supportés nativement)
// Les rôles possibles: GUEST, MEMBER, MANAGER, ADMIN, OWNER

model User {
  id          String   @id @default(cuid())
  discordId   String   @unique
  username    String
  name        String   // Nom à afficher dans le frontend (différent du nom Discord)
  email       String?
  avatar      String?
  balance     Int      @default(0)
  isOnline    Boolean  @default(false)
  maxBalance  Int      @default(0)
  role        String   @default("GUEST") // GUEST, MEMBER, MANAGER, ADMIN, OWNER
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  logs      Log[]

  @@map("users")
}


model Log {
  id        String   @id @default(cuid())
  action    String   // ex: CREATE, UPDATE, DELETE
  entity    String   // ex: User, Transaction, etc.
  entityId  String   // id de l'entité modifiée
  userId    String   // id de l'utilisateur ayant fait l'action
  diff      String?  // JSON des changements
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@map("logs")
}

model Item {
  id        String   @id @default(cuid())
  name      String   @unique
  weight    Float    // Poids en kilo, décimal possible
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sellable  Boolean  @default(true)
  weapon    Boolean  @default(false)

  itemPrices ItemPrice[]

  @@map("items")
}

model Group {
  id        String   @id @default(cuid())
  name      String   @unique
  tag       String? // Tag court ou abréviation
  description String?
  color1    String?
  color2    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  contacts Contact[]
  itemPrices ItemPrice[]
  
  @@map("groups")
}


model Contact {
  id        String   @id @default(cuid())
  name      String
  phone     String   // Doit commencer par 555-
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  groupid String?

  group     Group? @relation(fields: [groupid], references: [id])

  @@map("contacts")
}

model ItemPrice {
  id        String   @id @default(cuid())
  itemId    String
  groupId   String
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  onSell    Boolean  @default(true)
  buying    Boolean  @default(true)

  item      Item   @relation(fields: [itemId], references: [id])
  group     Group  @relation(fields: [groupId], references: [id])

  @@unique([itemId, groupId])
  @@map("item_prices")
}
